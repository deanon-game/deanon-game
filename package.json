{
  "name": "deanon-game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-back": "cd server && yarn start",
    "start-front": "cd front && yarn serve",
    "build-front": "cd front && yarn build",
    "lint-back": "cd server && yarn lint",
    "lint-front": "cd front && yarn lint",
    "lint": "concurrently --kill-others-on-fail \"yarn lint-back\" \"yarn lint-front\"",
    "lint-back:fix": "cd server && yarn lint:fix",
    "lint-front:fix": "cd front && yarn lint:fix",
    "lint:fix": "concurrently -n w: \"yarn:lint-*:fix\"",
    "dev": "concurrently --kill-others yarn:start-*",
    "update": "yarn & concurrently \"cd front && yarn\" \"cd server && yarn\""
  },
  "devDependencies": {
    "concurrently": "^4.1.1"
  }
}
